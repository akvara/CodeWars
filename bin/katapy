#!/bin/bash
name=""

for i in $*; do
    if [ "$name" != "" ]; then
        name=$name"_"
    fi
    name=$name$i
done

name=${name//#}
name=${name//\'/\_}
name=${name//:/}
name=${name//!/}
name=$name".py"

if [ ! -f $name ]; then
    echo "" >> $name
    echo "" >> $name
    echo "" >> $name
    echo "import unittest" >> $name
    echo "" >> $name
    echo "" >> $name
    echo $name created.
else
    echo $name already exists!
fi
