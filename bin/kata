#!/bin/bash
name=""

for i in $*; do
    if [ "$name" != "" ]; then
        name=$name"_"
    fi
    name=$name$i
done

name=${name//#}
name=${name//\'/\_}
name=${name//:/}
name=$name".php"

if [ ! -f $name ]; then
    echo "<?php" > $name
    echo "" >> $name
    echo "include_once __DIR__.'/vendor/autoload.php';" >> $name
    echo "use PHPUnit\Framework\TestCase;" >> $name
    echo "" >> $name
    echo "" >> $name
    echo "" >> $name
    echo "\$t = new MyTestCases();" >> $name
    echo "\$t->testBasics();" >> $name
    echo "" >> $name
    echo $name created.
else
    echo $name already exists!
fi
